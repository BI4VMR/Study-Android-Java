<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未开始"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Progress"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止服务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Start"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Bind_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务（组件A）"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Stop"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Bind_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务（组件B）"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Bind_A"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Unbind_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑服务（组件A）"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Bind_B"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_Unbind_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑服务（组件B）"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Unbind_A"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>